@page
@model TorneoDepartamental.App.Frontend.Pages.NovedadPartido.IndexModel
@{
}
<h1>Filtrar Novedad Partido</h1>
<form method="get">
    <div class="form-group">
        <label for="g">Filtrar</label>
        <select name="g" id="g" asp-for="@Model.gActual" class="form-control">
            <option value=@Model.gActual>Ver todos</option>
            @foreach (var novPartido in Model.NovedadesPartidos)
            {
                <option value="@novPartido.Partido.FechaPartido">@novPartido.Partido.FechaPartido</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>
<h1>Buscar Novedad Partido</h1>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar por fecha del partido</label>
        <input type="date" name="b" id="b" asp-for="@Model.bActual" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<h1>Listado de Novedades de Partidos</h1>
<a class="btn btn-primary" asp-page="./Create">Crear Novedad de Partido</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Minuto Partido</th>
            <th scope="col">Tarjeta</th>
            <th scope="col">Gol</th>
            <th scope="col">Partido</th>
            <th scope="col">Equipo</th>
            <th scope="col">Jugador</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var novPartido in Model.NovedadesPartidos)
        {
            <tr>
                <td>@novPartido.Id</td>
                <td>@novPartido.MinutoPartido</td>
                <td>@novPartido.Tarjeta</td>
                <td>@novPartido.Gol</td>
                @if (novPartido.Partido == null)
                {
                    <td></td>

                }
                else
                {

                    <td>@novPartido.Partido.FechaPartido</td>
                }

                @if (novPartido.Equipo == null)
                {
                    <td></td>

                }
                else
                {

                    <td>@novPartido.Equipo.Nombre</td>
                }

                @if (novPartido.Jugador == null)
                {
                    <td>
                        <a class="btn btn-primary" asp-page="./AssignPartido" asp-route-id="@Model.novPartido.Id">Asignar
                            Partido</a>
                    </td>

                }
                else
                {

                    <td>@novPartido.Jugador.Nombre</td>
                }
                <td>

                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@novPartido.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>