@page
@model TorneoDepartamental.App.Frontend.Pages.NovedadPartido.AssingJugadorModel
@{
}
<h1>Asignar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label for="idNovPartido">Jugador</label>
        <input id="idNovPartido" name="idNovPartido" class="form-control" value="@Model.novPartido.Id" readonly>
    </div>
    <div class="form-group">
        <label for="idJugador">Jugador</label>
        <select name="idJugador" id="idJugador" class="form-control">
            @foreach (var jugador in Model.jugadores)
            {
                <option value="@jugador.Id">@jugador.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Jugador</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
