@page
@model TorneoDepartamental.App.Frontend.Pages.Equipos.AddMunicipioModel
@{
}
<h1>Asignar Municipio</h1>
<form method="post">
    <div class="form-group">
        <label for="idEquipo">Equipo</label>
        <input id="idEquipo" name="idEquipo" class="form-control" value="@Model.equipo.Id" readonly>
        <span class="text-danger" asp-validation-for="equipo.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="equipo.Nombre"></label>
        <input asp-for="equipo.Nombre" class="form-control" value="@Model.equipo.Nombre" readonly>
        <span class="text-danger" asp-validation-for="equipo.Nombre"></span>
    </div>
    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select name="idMunicipio" id="idMunicipio" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.Id">@municipio.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Asignar Municipio</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
