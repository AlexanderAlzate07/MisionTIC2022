@page
@using TorneoDepartamental.App.Dominio
@model TorneoDepartamental.App.Frontend.Pages.Equipos.EditModel
@{
}
<h1>Editar equipo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.Id"></label>
        <input asp-for="equipo.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="equipo.Nombre"></label>
        <input asp-for="equipo.Nombre" class="form-control">
        <span asp-validation-for="equipo.Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
</form>

<a class="btn btn-secondary" asp-page="./Index">Volver</a>