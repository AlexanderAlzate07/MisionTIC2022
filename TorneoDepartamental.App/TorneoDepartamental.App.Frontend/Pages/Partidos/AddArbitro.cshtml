@page
@model TorneoDepartamental.App.Frontend.Pages.Partidos.AddArbitroModel
@{
}
<h1>Asignar arbitro</h1>
<form method="post">
    <div class="form-group">
        <label for="idPartido">Partido</label>
        <input id="partido.Id" type="text" name="idPartido" value="@Model.partido.Id" class="form-control" readonly>
    </div>
     <div class="form-group">
        <label for="idArbitro">Arbitro</label>
        <select name="idArbitro" id="idArbitro" class="form-control">
            @foreach (var arbitro in Model.arbitros)
            {
                <option value="@arbitro.Id">@arbitro.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar arbitro</button>     
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>