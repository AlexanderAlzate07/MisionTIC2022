@page
@model TorneoDepartamental.App.Frontend.Pages.Partidos.DetailsModel
@{
}
<h1>Detalles del Partido</h1>
<input type="hidden" asp-for="partido.Id">
<table class="table">

    <th scope="col">Id</th>
    <tr>
        <th scope="col">Id</th>
        <td>@Model.partido.Id</td>
    </tr>
    <tr>
        <th scope="col">Estadio</th>
        @if (Model.partido.Estadio == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEstadio" asp-route-id="@Model.partido.Id">Asignar Estadio</a>
            </td>
        }
        else
        {
            <td>@Model.partido.Estadio.Nombre</td>
        }
    </tr>
    <tr>
        <th scope="col">Fecha Partido</th>
        <td>@Model.partido.FechaPartido</td>
    </tr>
    <tr>
        <th scope="col">HoraPartido</th>
        <td>@Model.partido.HoraPartido</td>
    </tr>
    <tr>
        <th scope="col">Equipo Local</th>
        @if (Model.partido.EquipoLocal == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEquipoLocal" asp-route-id="@Model.partido.Id">Asignar Equipo
                    Local</a>
            </td>
        }
        else
        {
            <td>@Model.partido.EquipoLocal.Nombre</td>
        }
    </tr>
    <tr>
        <th scope="col">Marcador Equipo Local</th>
        <td>@Model.partido.MarcadorLocal</td>
    </tr>
    <tr>
        <th scope="col">Equipo Visitante</th>
        @if (Model.partido.EquipoVisitante == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEquipoVisitante" asp-route-id="@Model.partido.Id">Asignar Equipo
                    Visitante</a>
            </td>
        }
        else
        {
            <td>@Model.partido.EquipoVisitante.Nombre</td>
        }
    </tr>
    <tr>
        <th scope="col">Marcador Equipo Visitante</th>
        <td>@Model.partido.MarcadorVisitante</td>
    </tr>
    <tr>
        <th scope="col">Arbitro</th>
        @if (Model.partido.Arbitro == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddArbitro" asp-route-id="@Model.partido.Id">Asignar Arbitro</a>
            </td>
        }
        else
        {
            <td>@Model.partido.Arbitro.Nombre</td>
        }
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>