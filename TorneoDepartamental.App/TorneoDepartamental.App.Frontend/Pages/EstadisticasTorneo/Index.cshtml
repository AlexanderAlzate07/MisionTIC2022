@page
@model TorneoDepartamental.App.Frontend.Pages.EstadisticasTorneo.IndexModel
@{
}
<h1>Filtrar Estadistica Torneo</h1>    
    <form method="get">
    <div class="form-group">
        <label for="g">Filtrar</label>
        <select name="g" id="g" asp-for="@Model.gActual" class="form-control">
            <option value="-1">Ver todos</option>
            @foreach (var estadistica in Model.EstadisticaTorneos)
            {
                <option value="@estadistica.Equipo.Nombre">@estadistica.Equipo.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>
<h1>Buscar Estadistica Torneo</h1>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" asp-for="@Model.bActual" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<h1>Listado de Estadisticas del Torneo</h1>
<a class="btn btn-primary" asp-page="./Create">Nueva Estadisticas Torneo</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            @* <th scope="col">Cantidad Partidos Jugados</th>
            <th scope="col">Cantidad Partidos Ganados</th>
            <th scope="col">Cantidad Partidos Empatados</th>
            <th scope="col">Goles A favor</th>
            <th scope="col">Goles En Contra</th>
            <th scope="col">Puntos</th> *@
            <th scope="col">Equipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estadistica in Model.EstadisticaTorneos)
        {
            <tr>
                <td>@estadistica.Id</td>
                @if (estadistica.Equipo==null)
                {
                    <td><a class="btn btn-primary" asp-page="./AddEquipo" asp-route-id="@estadistica.Id">Asignar Equipo</a></td>
                }else{
                    <td>@estadistica.Equipo.Nombre</td>
                }
                
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@estadistica.Id">Detalle</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@estadistica.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>