@page
@model TorneoDepartamental.App.Frontend.Pages.Jugadores.CreateModel
@{
}
<h1>Nuevo jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" class="form-control">
        <span asp-validation-for="jugador.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.NumeroCamiseta"></label>
        <input asp-for="jugador.NumeroCamiseta" class="form-control">
        <span asp-validation-for="jugador.NumeroCamiseta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Posicion"></label>
        <input asp-for="jugador.Posicion" class="form-control">
        <span asp-validation-for="jugador.Posicion" class="text-danger"></span>
    </div>
     <button type="submit" class="btn btn-primary">Crear</button>
</form> 
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
