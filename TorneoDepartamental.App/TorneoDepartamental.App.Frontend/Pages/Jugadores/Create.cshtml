@page
@model TorneoDepartamental.App.Frontend.Pages.Jugadores.CreateModel
@{
}
<h1>Nuevo Jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="jugador.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.NumeroCamiseta"></label>
        <input asp-for="jugador.NumeroCamiseta" class="form-control">
        <span class="text-danger" asp-validation-for="jugador.NumeroCamiseta"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Posicion"></label>
        <input asp-for="jugador.Posicion" class="form-control">
        <span class="text-danger" asp-validation-for="jugador.Posicion"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear Jugador</button>
</form>
<a class="btn btn-primary" asp-page="./Index">Volver</a>
