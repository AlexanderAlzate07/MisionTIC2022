@page
@model TorneoDepartamental.App.Frontend.Pages.Jugadores.DetailsModel
@{
}
<h1>Lista de Jugadores</h1>
<table class="table table-dark">
    <tr>
        <th scope="col"># Camiseta</th>
        <td>@Model.jugadores.NumeroCamiseta</td>
    </tr>
      <tr>
        <th scope="col">Posicion</th>
        <td>@Model.jugadores.Posicion</td>
    </tr>
    <tr>
        <th scope="col">Equipo</th>
        @if (Model.jugadores.Equipo == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEquipo" asp-route-id="@Model.jugadores.Id">Asignar equipo</a></td>
        }
        else
        {
            <td>@Model.jugadores.Equipo.Nombre</td>
        }
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>
