@page
@model TorneoDepartamental.App.Frontend.Pages.Jugadores.IndexModel
@{
}
<h1>Filtrar Jugador</h1>    
    <form method="get">
    <div class="form-group">
        <label for="g">Filtrar</label>
        <select name="g" id="g" asp-for="@Model.gActual" class="form-control">
            <option value="-1">Ver todos</option>
            @foreach (var jugador in Model.Jugadores)
            {
                <option value="@jugador.Nombre">@jugador.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>
<h1>Buscar Jugador</h1>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" asp-for="@Model.bActual" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<h1>Listado de Jugadores</h1>
<a class="btn btn-primary" asp-page="./Create">Nuevo Jugador</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            @* <th scope="col">Numero Camiseta</th>
            <th scope="col">Posicion</th>
            <th scope="col">Equipo</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model.Jugadores)
        {
            <tr>
                <td>@jugador.Id</td>
                <td>@jugador.Nombre</td>
                @* <td>@jugador.NumeroCamiseta</td>
                <td>@jugador.Posicion</td>
                <td>@jugador.Equipo</td> *@
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@jugador.Id">Detalle</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@jugador.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>