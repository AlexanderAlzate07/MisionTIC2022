@page
@model TorneoDepartamental.App.Frontend.Pages.Jugadores.AddEquipoModel
@{
}
<h1>Asignar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label for="idJugador">Jugador</label>
        <input id="idJugador" name="idJugador" class="form-control" value="@Model.jugador.Id" readonly>
        <span class="text-danger" asp-validation-for="jugador.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" class="form-control" value="@Model.jugador.Nombre" readonly>
        <span class="text-danger" asp-validation-for="jugador.Nombre"></span>
    </div>
    <div class="form-group">
        <label for="idEquipo">Equipo</label>
        <select name="idEquipo" id="idEquipo" class="form-control">
            @foreach (var equipo in Model.equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Asignar Equipo</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>