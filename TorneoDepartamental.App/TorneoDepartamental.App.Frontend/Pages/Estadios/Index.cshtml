@page
@model TorneoDepartamental.App.Frontend.Pages.Estadios.IndexModel
@{
}
<h1>Filtrar Estadio</h1>
<form method="get">
    <div class="form-group">
        <label for="g">Filtrar</label>
        <select name="g" id="g" asp-for="@Model.gActual" class="form-control">
            <option value="-1">Ver todos</option>
            @foreach (var estadio in Model.Estadios)
            {
                <option value="@estadio.Nombre">@estadio.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" asp-for="@Model.bActual" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<h1>Lista de Estadios</h1>
<a class="btn btn-primary" asp-page=./Create>Nuevo estadio</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>

        </tr>
    </thead>
    </tbody>
    @foreach (var estadio in Model.Estadios)
    {
        <tr>
            <td>@estadio.Id</td>
            <td>@estadio.Nombre</td>
            <td>@estadio.Direccion</td>
            <td><a class="btn btn-primary" asp-page="./Details" asp-route-id="@estadio.Id">Detalles</a></td>
            <td><a class="btn btn-primary" asp-page="./Edit" asp-route-id="@estadio.Id">Editar</a></td>



        </tr>

    }

    </tbody>

</table>
