@page
@model TorneoDepartamental.App.Frontend.Pages.DirectoresTecnicos.IndexModel
@{
}
<h1>Filtrar Director Tecnico</h1>    
    <form method="get">
    <div class="form-group">
        <label for="g">Filtrar</label>
        <select name="g" id="g" asp-for="@Model.gActual" class="form-control">
            <option value="-1">Ver todos</option>
            @foreach (var tecnico in Model.DirectorTecnicos)
            {
                <option value="@tecnico.Nombre">@tecnico.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>
<h1>Buscar Director Tecnico</h1>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" asp-for="@Model.bActual" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<h1>Listado de Directores Tecnicos</h1>
<a class="btn btn-primary" asp-page="./Create">Nuevo Director Tecnico</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tecnico in Model.DirectorTecnicos)
        {
            <tr>
                <td>@tecnico.Id</td>
                <td>@tecnico.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@tecnico.Id">Detalle</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@tecnico.Id">Editar</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>