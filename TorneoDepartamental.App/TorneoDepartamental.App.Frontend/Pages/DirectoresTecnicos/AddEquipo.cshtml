@page
@model TorneoDepartamental.App.Frontend.Pages.DirectoresTecnicos.AddEquipoModel
@{
}
<h1>Asignar Municipio</h1>
<form method="post">
    <div class="form-group">
        <label for="idDirectorTecnico">Director Tecnico</label>
        <input id="idDirectorTecnico" name="idDirectorTecnico" class="form-control" value="@Model.tecnico.Id" readonly>
        <span class="text-danger" asp-validation-for="tecnico.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="tecnico.Nombre"></label>
        <input asp-for="tecnico.Nombre" class="form-control" value="@Model.tecnico.Nombre" readonly>
        <span class="text-danger" asp-validation-for="tecnico.Nombre"></span>
    </div>
    <div class="form-group">
        <label for="idEquipo">Municipio</label>
        <select name="idEquipo" id="idEquipo" class="form-control">
            @foreach (var equipo in Model.equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Equipo</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>