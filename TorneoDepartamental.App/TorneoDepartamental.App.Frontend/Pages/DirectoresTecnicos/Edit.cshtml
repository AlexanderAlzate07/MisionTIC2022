@page
@model TorneoDepartamental.App.Frontend.Pages.DirectoresTecnicos.EditModel
@{
}
<h1>Editar Director tecnico</h1>
<form method="post">
    <input type="hidden" asp-for="tecnico.Id">
    <div class="form-group">
        <label asp-for="tecnico.Nombre"></label>
        <input asp-for="tecnico.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="tecnico.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="tecnico.Telefono"></label>
        <input asp-for="tecnico.Telefono" class="form-control">
        <span class="text-danger" asp-validation-for="tecnico.Telefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="tecnico.Documento"></label>
        <input asp-for="tecnico.Documento" class="form-control">
        <span class="text-danger" asp-validation-for="tecnico.Documento"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar Director Tecnico</button>
</form>
<a class="btn btn-primary" asp-page="./Index">Volver</a>