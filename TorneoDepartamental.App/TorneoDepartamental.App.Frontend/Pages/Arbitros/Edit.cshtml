@page
@model TorneoDepartamental.App.Frontend.Pages.Arbitros.EditModel
@{
}
<h1>Editar Arbitro</h1>
<form method="post">
    <input type="hidden" asp-for="arbitro.Id">
    <div class="form-group">
        <label asp-for="arbitro.Nombre"></label>
        <input asp-for="arbitro.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="arbitro.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="arbitro.Telefono"></label>
        <input asp-for="arbitro.Telefono" class="form-control">
        <span class="text-danger" asp-validation-for="arbitro.Telefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="arbitro.Documento"></label>
        <input asp-for="arbitro.Documento" class="form-control">
        <span class="text-danger" asp-validation-for="arbitro.Documento"></span>
    </div>
    <div class="form-group">
        <label asp-for="arbitro.ColegioArbitro"></label>
        <input asp-for="arbitro.ColegioArbitro" class="form-control">
        <span class="text-danger" asp-validation-for="arbitro.ColegioArbitro"></span>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar Arbitro</button>
</form>
<a class="btn btn-primary" asp-page="./Index">Volver</a>